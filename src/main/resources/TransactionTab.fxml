<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mateoi.money.view.controllers.TransactionController">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="34.0" minHeight="34.0" prefHeight="34.0" vgrow="NEVER"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <SplitPane dividerPositions="0.7" orientation="VERTICAL" GridPane.columnSpan="4" GridPane.hgrow="ALWAYS"
                           GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                    <items>
                        <TableView fx:id="table" editable="true">
                            <columns>
                                <TableColumn fx:id="dateColumn" minWidth="-1.0" prefWidth="-1.0" text="Date"/>
                                <TableColumn fx:id="descriptionColumn" minWidth="-1.0" prefWidth="-1.0"
                                             text="Description"/>
                                <TableColumn fx:id="amountColumn" minWidth="-1.0" prefWidth="-1.0" text="Amount"/>
                                <TableColumn fx:id="accountColumn" minWidth="-1.0" prefWidth="-1.0" text="Account"/>
                                <TableColumn fx:id="typeColumn" minWidth="-1.0" prefWidth="-1.0" text="Type"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
                            <items>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                    <children>
                                        <GridPane layoutX="36.0" layoutY="117.0" AnchorPane.bottomAnchor="0.0"
                                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                  AnchorPane.topAnchor="0.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <TableView fx:id="accountTable" editable="true" prefHeight="200.0"
                                                           prefWidth="200.0" GridPane.rowIndex="1">
                                                    <columns>
                                                        <TableColumn fx:id="accountDateColumn" prefWidth="75.0"
                                                                     text="Date"/>
                                                        <TableColumn fx:id="accountDescriptionColumn" prefWidth="75.0"
                                                                     text="Description"/>
                                                        <TableColumn fx:id="accountAmountColumn" prefWidth="75.0"
                                                                     text="Amount"/>
                                                        <TableColumn fx:id="accountBalanceColumn" editable="false"
                                                                     prefWidth="75.0" text="Balance"/>
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                </TableView>
                                                <Label fx:id="accountLabel" text="Label">
                                                    <GridPane.margin>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </GridPane.margin>
                                                </Label>
                                            </children>
                                        </GridPane>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                    <children>
                                        <GridPane layoutX="254.0" layoutY="106.0" AnchorPane.bottomAnchor="0.0"
                                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                  AnchorPane.topAnchor="0.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <TableView fx:id="budgetTable" editable="true" prefHeight="200.0"
                                                           prefWidth="200.0" GridPane.rowIndex="1">
                                                    <columns>
                                                        <TableColumn fx:id="budgetDateColumn" prefWidth="75.0"
                                                                     text="Date"/>
                                                        <TableColumn fx:id="budgetDescriptionColumn" prefWidth="75.0"
                                                                     text="Description"/>
                                                        <TableColumn fx:id="budgetAmountColumn" prefWidth="75.0"
                                                                     text="Amount"/>
                                                        <TableColumn fx:id="budgetIncludedColumn" prefWidth="75.0"
                                                                     text="Included"/>
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                </TableView>
                                                <Label fx:id="budgetLabel" text="Label">
                                                    <GridPane.margin>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </GridPane.margin>
                                                </Label>
                                            </children>
                                        </GridPane>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </items>
                </SplitPane>
                <HBox>
                    <children>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onAddItem" prefHeight="24.0" prefWidth="24.0">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-Plus-48.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Add New Transaction"/>
                            </tooltip>
                        </Button>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onRemoveItem" prefHeight="24.0" prefWidth="24.0">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-Minus-50.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Remove Transaction"/>
                            </tooltip>
                        </Button>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onEditItem" prefHeight="24.0" prefWidth="24.0">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-Edit_Property-48.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Edit Transaction"/>
                            </tooltip>
                        </Button>
                    </children>
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </HBox>
                <Separator orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="1"/>
                <HBox fillHeight="false" GridPane.columnIndex="2">
                    <children>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onNew" prefHeight="24.0" prefWidth="24.0"
                                HBox.hgrow="NEVER">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-File-48.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="New File"/>
                            </tooltip>
                        </Button>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onOpen" prefHeight="24.0" prefWidth="24.0"
                                HBox.hgrow="NEVER">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-Open-40.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Open File"/>
                            </tooltip>
                        </Button>
                        <Button maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0"
                                mnemonicParsing="false" onAction="#onSave" prefHeight="24.0" prefWidth="24.0"
                                HBox.hgrow="NEVER">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Icons/icons8-Save-48.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Save File"/>
                            </tooltip>
                        </Button>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</AnchorPane>
