<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mateoi.money.view.SavingsController">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <ButtonBar GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.valignment="CENTER"
                           GridPane.vgrow="NEVER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#onAddItem" text="+"/>
                        <Button mnemonicParsing="false" onAction="#onRemoveItem" text="-"/>
                        <Button mnemonicParsing="false" onAction="#onEditItem" text="Edit"/>
                    </buttons>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </ButtonBar>
                <TableView fx:id="table" editable="true" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2"
                           GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description"/>
                        <TableColumn fx:id="goalColumn" prefWidth="75.0" text="Goal"/>
                        <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Current amount"/>
                        <TableColumn fx:id="progressColumn" editable="false" prefWidth="75.0" text="Progress"/>
                        <TableColumn fx:id="accountColumn" prefWidth="75.0" text="Account"/>
                        <TableColumn fx:id="allocationColumn" prefWidth="75.0" text="Budget allocation"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TableView>
            </children>
        </GridPane>
    </children>
</AnchorPane>
